<SlotsPicker
  @appointmentSlots={{this.appointmentSlots}}
  @selected={{this.selected}}
  @noSlotLabel={{this.noSlotLabel}}
  @select={{action "select"}}
  as |baseProps onSelectSlot onDeselectSlot|
>
  {{#if baseProps.slotsAreLoading}}
    <SlotsPicker::SlotsLoader @title={{this.loaderSentence}} />
  {{else}}
    {{component slotPickerComponentName
      baseProps=baseProps
      onSelectSlot=onSelectSlot
      onDeselectSlot=onDeselectSlot
    }}
    <SlotsPicker::SelectionSingle @baseProps={{baseProps}} />
  {{/if}}
</SlotsPicker>
