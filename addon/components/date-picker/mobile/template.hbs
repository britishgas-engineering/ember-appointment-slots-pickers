<div class="date-picker-mobile-current-day text-center">
  <div class="font-size-6 day">
    {{#if this.tempCurrentDay}}
      {{to-upper-case (moment-format this.tempCurrentDay.date "dddd")}}
    {{else}}
      &nbsp;
    {{/if}}
  </div>
</div>

<div class="date-picker-mobile-days month-{{this.currentMonth.month}}">
  <HorizontalListSwiper::Sly @itemsUpdate={{this.days}} @indexUpdate={{this.currentIndex}} @active-item-alignment="forceCentered" @onmove={{action "onmove"}} @onmoveend={{action "onmoveend"}} @cacheKey={{this.cacheKey}} as |day|>
    <div class="date-picker-mobile-day">

      {{#if day.isBoundaryDayOfTheMonth}}
        {{#if (eq day.month this.tempCurrentDay.month)}}
        {{else}}
          <div class="date-picker-mobile-day-month text-center font-size-8 month-{{day.month}}">
            {{moment-format day.date "MMMM"}}
          </div>
        {{/if}}
      {{/if}}

      <div class="px1 text-center">
        <button
          class="p0 {{if (includes this.selectedMoments day.date) 'active'}}"
          disabled={{day.isDisabled}}
          {{action "onselectDate" day.date}}
          >
          {{moment-format day.date "D"}}
        </button>
      </div>

    </div>
  </HorizontalListSwiper::Sly>
</div>

<div class="date-picker-mobile-current-month text-center font-size-8">
  {{#if (not this.slotsAreLoading)}}
    {{moment-format this.tempCurrentDay.date "MMMM YYYY"}}
  {{/if}}
</div>

<div class="date-picker-mobile-scroll text-center font-size-1">
  {{yield (action "selectPrevNextDate") this.width this.currentDateIndex}}

  {{#if this.showLeftArrow}}
    <button class="date-picker-mobile-button fa fa-angle-left" {{action "selectPrevNextDate" -1}}></button>
  {{/if}}

  {{#if this.showRightArrow}}
    <button class="date-picker-mobile-button fa fa-angle-right" {{action "selectPrevNextDate" 1}}></button>
  {{/if}}
</div>
