<HorizontalListSwiper::NoDelayOnTransitionsInTest>
  {{#unless this.isFirstPage}}
    <button {{action (action 'prev') on="click"}} class="asp-scroll-btn asp-scroll-btn-prev m0 text-center">
      <span class="fa fa-chevron-circle-left white" aria-hidden="true"></span>
      <span class="sr-only">Go to previous page</span>
    </button>
  {{/unless}}
  {{#unless this.isLastPage}}
    <button {{action (action 'next') on="click"}} class="asp-scroll-btn asp-scroll-btn-next m0 text-center more-dates">
      <span class="white mr2">More dates</span>
      <span class="fa fa-chevron-circle-right white" aria-hidden="true"></span>
    </button>
  {{/unless}}
  <div class="asp-scroll-area-wrapper">
    <div style="{{this.scrollAreaStyle}}" class="asp-scroll-area animated">
      {{#each this.items as |item|}}
        {{yield item}}
      {{/each}}
    </div>
    {{#unless this.isLastPage}}
      <div class="asp-fade-right"></div>
    {{/unless}}
    {{#unless this.isFirstPage}}
      <div class="asp-fade-left"></div>
    {{/unless}}
  </div>
</HorizontalListSwiper::NoDelayOnTransitionsInTest>
