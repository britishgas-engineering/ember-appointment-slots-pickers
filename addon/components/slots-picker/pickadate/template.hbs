{{#if this.slotsAreLoading}}
  <SlotsPicker::SlotsLoader />
{{else}}
  <div class="asp-pickadate text-center">
    <PickadateInput
      @min={{this.min}}
      @max={{this.max}}
      @select={{action "onSelectDate"}}
      hideToday={{true}}
      @selected={{this.selected}}
      @jsDays={{this.jsDays}}
      @setShorterDays={{true}}
    />

    {{#if (and (not this.selectedFilter) this.currentDay)}}
      <ScrollAnchor @name="time-slots" />

      <h3 class="mt5">
        {{#if this.editingExistingAppointment}}
          Pick your time slot
        {{else}}
          Great, now pick your time slot
        {{/if}}
      </h3>

      <div class="row mt4 mb4">
        <div class="col-md-12 text-center">
          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <div class="row">

                {{#each this.cellsForColOfSelectedDay as |cell|}}
                  <div class="col-xs-6 mb2">
                    {{#if cell}}
                      <SlotsPicker::Button
                        @appointmentSlot={{cell}}
                        @multiSelected={{this.multiSelected}}
                        @canSelectMultipleSlots={{false}}
                        @select={{action this.onSelectSlot}}
                      />
                    {{else}}
                      <div class="no-slot-label mb2 mt2">
                        {{cell.slotPickerRowLabel}}
                        ({{if
                          this.noSlotLabel
                          this.noSlotLabel
                          "Fully booked"
                        }})
                      </div>
                    {{/if}}
                  </div>
                {{/each}}

              </div>
            </div>
          </div>
        </div>
      </div>
    {{/if}}

    <div class="clearfix"></div>
  </div>
{{/if}}
