<div class="container-fluid">
  <h1>clock-reloader</h1>

  <div class="mb8">
    <ClockReloader
      @delay={{3000}}
      @onrefresh={{this.onRefresh}}
      as |isExpired refresh|
    >
      <div class="refresher-overlay">
        {{#if isExpired}}
          {{#if isExpired}}
            <ClockReloader::Overlay
              @title="<h2>Your data has expired!</h2>"
              @refresh={{action refresh}}
            />
          {{/if}}
        {{else}}
          <h2>Your data will expire in 3 seconds..</h2>
        {{/if}}
      </div>

      <BgButton
        @action={{action refresh}}
        @disabled={{unless isExpired true}}
        @theme="secondary"
      >
        Refresh
      </BgButton>

    </ClockReloader>
  </div>

</div>
