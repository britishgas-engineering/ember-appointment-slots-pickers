<div class="container-fluid">

  <h2>horizontal-list-swiper/gesture2</h2>

  <div class="mb8" style="position:relative; transition: all 0.4s;">
    <HorizontalListSwiper::Gesture2 @items={{this.model}} @width={{300}} @onswipe={{action "selectPrevNextItem"}} @index={{this.currentIndex}} as |item|>
      <div class="cell" style="width:50px; height:100px; float:left;">
        {{item}}
      </div>
    </HorizontalListSwiper::Gesture2>
  </div>

</div>
